{
  "env": {
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "globals": {
    "global": "readonly",
    "imports": "readonly",
    "log": "readonly",
    "logError": "readonly",
    "print": "readonly",
    "printerr": "readonly",
    "console": "readonly"
  },
  "rules": {
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-trailing-spaces": "warn",
    "eol-last": ["error", "always"]
  }
}
